<%- include('layout'); -%>

<section>
    <h2>Stores</h2>
    <table border="1">
        <thead>
            <tr>
                <th>SID</th>
                <th>Location</th>
                <th>Manager ID</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% stores.forEach(store => { %>
                <tr>
                    <td><%= store.sid %></td>
                    <td><%= store.location %></td>
                    <td><%= store.mgrid %></td>
                    <td><a href="/stores/edit/<%= store.sid %>">Update</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/stores/add">Add Store</a>
</section>
